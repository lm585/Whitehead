 t4$m.int.vs.f.b.pval = 1
 t4$m.int.vs.f.odds = 1
for(i in 1:dim(t4)[1]) {
 m <- matrix(1:4,  nrow=2, ncol = 2, byrow=T )
 m[1,] <-as.numeric( t4[i,c(3,4)])
 m[2,] <-as.numeric( t4[i,c(11,12)])
 fi <- fisher.test(m)
 t4$m.int.vs.f.b.pval[i] <- fi$p.value
 t4$m.int.vs.f.odds[i] <- fi$estimate
}

