 info <- data.frame(sex = c(0,1,0,1,0,1))
t1$sex.cor = -999
for(i in 1:dim(a.df)[1])
{
  d1 <-  data.frame(y = t(a.df[i,]), sex = info$sex )
  d2 <-  lm(d1[,1] ~ d1$sex)
