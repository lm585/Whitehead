m.r <- cor.test(as.numeric( m[,1]), as.numeric(m[,2]))
a.r <- cor.test(as.numeric( a[,1]), as.numeric(a[,2]))
geneName = paste(t1[t1$V1 == "grape3", i] ,t1[ t1$V1 == "grape3", j], sep = "\t")
