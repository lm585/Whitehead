t3 <- cor.test(res.info.g.p.male$mean.x, res.info.g.p.male$mean.y)
corRes <- paste(geneName, pathname, t2$estimate, t2$p.value, t3$estimate, t3$p.value, t1$estimate, t1$p.value, sep = "\t")
cat(corRes)
cat("\n")
