 for(j in 1:length(ll)) {
wilcox <- wilcox.test(as.numeric( ll[[i]]),as.numeric( ll[[j]]), paired=F, exact=F, conf.int = T)
str <- paste(names(ll)[i], names(ll)[j], wilcox$p.value, sep = "\t" )
cat(str)
cat("\n")
 } }

