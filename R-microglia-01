y <- calcNormFactors(y)
d = cpm(y)
a <- d
b = log10(a+1)
for(i in 1:dim(b)[1])
{
  a[i, ] <- (b[i, ] - mean(as.numeric(b[i,]))) / var(as.numeric(b[i,]))^(1/2)
}
