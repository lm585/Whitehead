BEGIN {FS = "\t"; OFS = "\t"} 
{
 if(NR == 1)
 {
  print $0, "log2FC";
 }
 else
 {
  c=($2 + $3 + 0.5*2) /2;
  t=($4 + $5 + 0.5*2) /2;
  fc= log(t/c) / log(2);
  print $0, fc;
 }
}
' > temp-2
###how many identical logFC
cat temp-2 | cut -f 6 | sort | uniq -c | awk '$1 > 2'
cat temp-2 | awk 'NR > 1' | sort -t '       ' +5 -6g | tail -n 20
wl=`cat temp-2 | awk 'NR > 1' | wc -l | awk '{print $1}'`
echo $wl
