 corr1.rand <- corr1
 identical(colnames(corr1.rand), colnames(corr1.ox))
 t9 <- rbind(corr1.rand, corr1.ox)
 t10 <- t9[t9$name != tf,]
 dim(t10[ t10$VDR.binding == "randomgenes.yes",])
 dim(t10[ t10$VDR.binding == "randomgenes.no",])
 dim(t10[ t10$VDR.binding == "oxphos.yes",])
