 res$ox.yes.rand.no.P <- -999
 res$ox.yes.ox.no.P = -999
#TF status
 res$TF = "not expre or 1 gene name with >1 geneID"


 for(i in 1:dim(t3)[1]) {
 t4 <- strsplit(t3$Genes[i], ';')
#####TF target genes
 # t4[[1]]
 file <- "temp-pathway-200genes-list"
f1 <- read.delim(file, header=F)
