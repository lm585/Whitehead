if(dim(a.df.g.x[ a.df.g.x$name %in% c( tf), ])[1] == 1) {
p.exp <- a.df.g[ a.df.g$name %in% c(f1$V1), ]
p.exp.2 <- a.df.g.x[ a.df.g.x$name %in% c( tf), ]
